{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "client",
    "client/**/*",
    "server/vite.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "dist",
    "noEmit": false,
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
